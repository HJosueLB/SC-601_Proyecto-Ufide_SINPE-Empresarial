@model SINPE_Empresarial.Domain.SinpeDomain.Entities.Sinpe

@{
    ViewBag.Title = "Registrar Pago SINPE";
}

<!-- Integración de CSS -->
<link rel="stylesheet" href="~/Content/css/SinpeStyles/SinpeRegister.css" />

<div class="container-fluid bg-light min-vh-100 py-5">
    <div class="container bg-white p-5 shadow-sm rounded-4" style="max-width: 900px;">

        <!-- Encabezado -->
        <div class="mb-4">
            <h2 class="fw-bold">Registrar Pago SINPE</h2>
            <p class="text-muted mb-0">Completa los datos para realizar un pago electrónico por medio de SINPE.</p>
        </div>

        <!-- Mensajes de éxito o error -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        <!-- Formulario -->
        @using (Html.BeginForm("Register", "Sinpe", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
            @Html.AntiForgeryToken()

            <div class="row g-4">

                <!-- Teléfono Origen -->
                <div class="col-md-6">
                    <label for="TelefonoOrigen" class="form-label">Teléfono Origen</label>
                    @Html.TextBoxFor(m => m.TelefonoOrigen, new { @class = "form-control form-control-lg", placeholder = "Ej: 88885555" })
                    @Html.ValidationMessageFor(m => m.TelefonoOrigen, "", new { @class = "text-danger small" })
                </div>

                <!-- Nombre Origen -->
                <div class="col-md-6">
                    <label for="NombreOrigen" class="form-label">Nombre Origen</label>
                    @Html.TextBoxFor(m => m.NombreOrigen, new { @class = "form-control form-control-lg", placeholder = "Nombre del remitente" })
                    @Html.ValidationMessageFor(m => m.NombreOrigen, "", new { @class = "text-danger small" })
                </div>

                <!-- Teléfono Destinatario -->
                <div class="col-md-6">
                    <label for="TelefonoDestinatario" class="form-label">Teléfono Destinatario</label>
                    @Html.TextBoxFor(m => m.TelefonoDestinatario, new { @class = "form-control form-control-lg", placeholder = "Ej: 88885555" })
                    @Html.ValidationMessageFor(m => m.TelefonoDestinatario, "", new { @class = "text-danger small" })
                </div>

                <!-- Nombre Destinatario -->
                <div class="col-md-6">
                    <label for="NombreDestinatario" class="form-label">Nombre Destinatario</label>
                    @Html.TextBoxFor(m => m.NombreDestinatario, new { @class = "form-control form-control-lg", placeholder = "Nombre del comercio/caja" })
                    @Html.ValidationMessageFor(m => m.NombreDestinatario, "", new { @class = "text-danger small" })
                </div>

                <!-- Monto -->
                <div class="col-md-6">
                    <label for="Monto" class="form-label">Monto</label>
                    @Html.TextBoxFor(m => m.Monto, new { @class = "form-control form-control-lg", placeholder = "₡ Monto a transferir" })
                    @Html.ValidationMessageFor(m => m.Monto, "", new { @class = "text-danger small" })
                </div>

                <!-- Descripción -->
                <div class="col-12">
                    <label for="Descripcion" class="form-label">Descripción (opcional)</label>
                    @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control form-control-lg", placeholder = "Descripción del pago" })
                    @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger small" })
                </div>

                <!-- Botones -->
                <div class="col-12 d-flex justify-content-between flex-wrap gap-3">
                    <button type="submit" class="btn text-white fw-bold" style="background-color: #574FD6;">
                        Registrar Pago
                    </button>

                    <a href="@Url.Action("Index", "Home")" class="btn text-white fw-bold" style="background-color: cadetblue;">
                        Regresar
                    </a>
                </div>
            </div>
        }
    </div>
</div>
