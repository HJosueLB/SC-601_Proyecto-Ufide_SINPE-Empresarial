@model SINPE_Empresarial.Domain.ComercioDomain.Entities.Caja

@{
    ViewBag.Title = "Registrar Caja";
}

<!-- Integración de CSS -->
<link rel="stylesheet" href="~/Content/css/CajaStyles/CajaRegister.css" />

<!-- Formulario de registro de una nueva caja -->
<div class="container-fluid bg-light min-vh-100 py-5">
    <div class="container bg-white p-5 shadow-sm rounded-4" style="max-width: 900px;">

        <!-- Encabezado de formulario -->
        <div class="mb-4">
            <h2 class="fw-bold">Registrar Caja</h2>
            <p class="text-muted mb-0">Completa los datos para registrar una nueva caja en el sistema.</p>
        </div>

        <!-- Validación -->
        @using (Html.BeginForm("CrearCaja", "Cajas", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
        {
        @Html.AntiForgeryToken()

        <div class="row g-4">

            <!-- Nombre -->
            <div class="col-md-6">
                <label for="Nombre" class="form-label">Nombre</label>
                @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg", placeholder = "Nombre de la caja" })
                @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger small" })
            </div>

            <!-- Descripción -->
            <div class="col-md-6">
                <label for="Descripcion" class="form-label">Descripción</label>
                @Html.TextBoxFor(m => m.Descripcion, new { @class = "form-control form-control-lg", placeholder = "Descripción de la caja" })
                @Html.ValidationMessageFor(m => m.Descripcion, "", new { @class = "text-danger small" })
            </div>

            <!-- Teléfono SINPE -->
            <div class="col-md-6">
                <label for="TelefonoSINPE" class="form-label">Teléfono SINPE</label>
                @Html.TextBoxFor(m => m.TelefonoSINPE, new { @class = "form-control form-control-lg", placeholder = "Teléfono SINPE" })
                @Html.ValidationMessageFor(m => m.TelefonoSINPE, "", new { @class = "text-danger small" })
            </div>

            <!-- Botones -->
            <div class="col-12 d-flex justify-content-between flex-wrap gap-3">
                <button type="submit" class="btn text-white fw-bold" style="background-color: #574FD6;">
                    Registrar
                </button>

                <a href="@Url.Action("Index", "Cajas")" class="btn text-white fw-bold" style="background-color: cadetblue;">
                    Regresar
                </a>
            </div>
        </div>
        }
    </div>
</div>
